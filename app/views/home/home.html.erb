<% if logged_in? %>
<div class="container-fluid forall border"  >
  <div class="row row-eq-height">
      <div class="col-xs-3 mr-2 justify-content-center" style="min-width: 150px; max-width:250px; ">
        <div class=" border border-dark" style="background-color: #b3ffb3;">
        <div class="row border border-warning ml-1" style="width:100%;">
          <div class="col-xs-4" style="width: 80px; ">
              <% if @user.avatar.record_id != nil%>
                <%= image_tag (@user.avatar), style:" padding: 0px 0px 0px 0px; border-radius: 35px; margin-top: 5px; height: 70px; width: 70px;" %>
              <% else %>
                <img src="default-avatar.jpg" style=" padding: 0px 0px 0px 0px; border-radius: 35px;  margin-top: 5px; height: 70px; width: 70px;">
              <% end %>
        </div>
        <div class="col-xs-2 ml-2" style=" ">
          <img src="1mil.png" style="  margin-top: 5px; height: 25px; width: 25px;">
          <img src="testachieve.jpg" style=" padding: 0px 0px 0px 0px;  margin-left: 2px; height: 25px; width: 25px; border-radius: 10px;">
        </div>
      </div>
      <div class="row border border-dark ml-1" style="width:90%; height:100%;">
          <p><%= @user.name%></p>
          <p><%= link_to "@"+@user.username, user_path(@user.id)%> </p>
          <p> <%= @user.zipcode%></p>
      </div>
      <div class="row">
        <div class="col">
          <p><%= @user.bio%></p>
        </div>
      </div>
      <div class="row  ml-1" style="width: 100%">
        <div class="col text-center">
          <h5>  Songs</h5>
        </div>
        <div class="col text-center">
          <h5>  Posts </h5>
        </div>
      </div>
      <div class="row ml-1" style="width: 100%;">
        <div class="col text-center" style="margin-top: -10px;">
          0
        </div>
        <div class="col text-center" style="margin-top: -10px;">
          <%= @user.posts.count %>
        </div>
      </div>
      <div class="row ml-1" style="width:100%;">
        <div class="col text-center">
          <h5>  Followers</h5>
        </div>
        <div class="col text-center">
          <h5>  Following</h5>
        </div>
      </div>

      <div class="row ml-1" style="width: 100%;">
        <div class="col text-center" style="margin-top: -10px;">
          <%= link_to @user.followers.count, followers_user_path(@user), :style => "line-height:0px; transform: translate(0px,0px);" %>
        </div>
        <div class="col text-center" style="margin-top: -10px;">
          <%= link_to @user.following.count, following_user_path(@user), :style => "line-height:0px; transform: translate(0px,0px);" %>
        </div>
      </div>

      <div class="row justify-content-center" style="width: 100%;">
        Social Media Links
      </div></div>
      <br/>
        <div class=" border border-dark" style="background-color: #b3ffb3;">
      <div class="row ml-1 justify-content-center" style="width:100%;">
                <%= render "/posts/form" %>
              </div>
</div>
    </div>
            <!--  MIDDLE COLUMN FEED -->
    <div class="col-xs-6 border border-dark" style="min-width: 300px; max-width:55%;">
      <%= render "/posts/userfeed"%>
    </div>
            <!-- RIGHT COLUMN -->
    <div class="col-xs-3 border border-dark ml-2" style="width:16%; background-color: #b3ffb3; height: 150px;">
      Recommended music
    </div>
  </div>


</div>


<% else %>
<div class="container-fluid forall">
  <div class="row welcome">
    <div class="col">
      <h2>Welcome to Vibin Music!</h2>
    </div>
  </div>
<p></p>
  <div class="row justify-content-between">

    <!-- How do I make the columns different heights -->
    <div class="col-xs-6 ml-2 welcome " style="overflow: hidden; min-width:70%;">
      Find new music<br>
      Find your group<br>
      Share music<br>
      Upload Music
    </div>
        <div class="clearfix"></div>
    <div class="col-xs-3 mr-2 welcome" style="min-width:25%;">
      <p> Top Songs </p>
          <p> Top Songs </p>
              <p> Top Songs </p>
                  <p> Top Songs </p>
                      <p> Top Songs </p>
                          <p> Top Songs </p>
                              <p> Top Songs </p>

    </div>
  </div>
  <div class="row" style="height:90px;">
    <div class="col footer">
        <center><p>Vibin Music inc. BITCH</p></center>
    </div>
  </div>

<% end %>
</div>
